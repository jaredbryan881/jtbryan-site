---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
---


<!DOCTYPE html>
<html
>
  <Header title="Jared Bryan" />
  <body>
    <div class="content">
      <Sidebar selectedItem="home" />
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <div class="fold-content">
              <h3>Jared Bryan</h3>
              <h4>PhD Candidate in Geophysics<br />MIT Department of Earth, Atmospheric, and Environmental Sciences</h4>
              <p class="lead">
                I study earthquakes and volcanoes with seismic and geodetic techniques. I also study asteroseismology. I am interested in instrumentation.
              </p>
            </div>

            <div class="button-row" style="display:flex; gap:.5rem; flex-wrap:wrap;">
              <a href="mailto:jtbryan@mit.edu" class="button w-button" aria-label="Email Jared">Contact</a>
              <a href="https://github.com/jaredbryan881" class="button w-button" target="_blank" rel="noopener noreferrer" aria-label="GitHub">GitHub</a>
              <a href="https://www.linkedin.com/in/jared-bryan-6a55b213a" class="button w-button" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">LinkedIn</a>
              <a href="https://scholar.google.com/citations?user=w-QWLhoAAAAJ&hl=en" class="button w-button" target="_blank" rel="noopener noreferrer" aria-label="Google Scholar">Scholar</a>
              <a href="https://orcid.org/0000-0001-9466-1843" class="button w-button" target="_blank" rel="noopener noreferrer" aria-label="ORCID">ORCID</a>
            </div>
          </main>

          <div class="projects-section">
            <!-- About Me -->
            <a href="/about" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img src="./assets/database.svg" loading="lazy" alt="About Jared" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>About Me</h4>
                <div class="mini-label-white gray-color">Background, CV</div>
              </div>
            </a>

            <!-- Research -->
            <div class="projects-container">
              <div class="single-projects-category">
                <a href="/research" class="projects-category-image-link" aria-label="Research">
                  <div class="projects-category-image-container">
                    <img src="./assets/browser.svg" loading="lazy" alt="Research" class="projects-category-image" />
                  </div>
                </a>
              </div>

              <div class="single-projects-content">
                <h4><a href="/research"</a>Research</h4>
                <div class="tech-tools-container">
                  <div class="chips-container chips-container-small-width">
                    <a class="single-chip small-chip" href="/research/fault-zones/">Fault Zones</a>
                    <a class="single-chip small-chip" href="/research/volcanoes/">Volcanoes</a>
                    <a class="single-chip small-chip" href="/research/induced-seismicity/">Induced Seismicity</a>
                    <a class="single-chip small-chip" href="/research/asteroseismology/">Asteroseismology</a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Publications -->
            <a href="/publications" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container devops-img">
                  <img src="./assets/database.svg" loading="lazy" alt="Publications section" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Publications</h4>
              </div>
            </a>

            <!-- Personal Projects (blog) -->
            <a href="/personal-projects" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img src="./assets/database.svg" loading="lazy" alt="Personal projects" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Personal Projects</h4>
                <div class="mini-label-white gray-color">One-offs, experiments, notes</div>
              </div>
            </a>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
